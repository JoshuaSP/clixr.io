<div id="wysihtml5-toolbar">
  <ul id="text-toolbar-items">
    <li><a data-wysihtml5-command="bold" title="CTRL+B"><i class="fa fa-bold"></i></a></li>
    <li><a data-wysihtml5-command="italic" title="CTRL+I"><i class="fa fa-italic"></i></a></li>
    <li><a data-wysihtml5-command="underline" title="CTRL+U"><i class="fa fa-underline"></i></a></li>
    <li><a data-wysihtml5-command="createLink"><i class="fa fa-link"></i></a></li>
    <li><a data-wysihtml5-command="removeLink"><i class="fa fa-unlink"></i></a></li>
    <li><a data-wysihtml5-command="fontSizeStyle">Size</a></li>
    <div data-wysihtml5-dialog="fontSizeStyle" style="display: none;">
      Size:
      <input type="text" data-wysihtml5-dialog-field="size" style="width: 60px;" value="" />
      <a data-wysihtml5-dialog-action="save">OK</a>&nbsp;<a data-wysihtml5-dialog-action="cancel">Cancel</a>
    </div>

    <li><a data-wysihtml5-command="alignLeftStyle"><i class="fa fa-align-left"></i></a></li>
    <li><a data-wysihtml5-command="alignRightStyle"><i class="fa fa-align-right"></i></a></li>
    <li><a data-wysihtml5-command="alignCenterStyle"><i class="fa fa-align-center"></i></a></li>
    <li>
      <a data-wysihtml5-command="foreColorStyle">Color</a>
      <div data-wysihtml5-dialog="foreColorStyle" style="display: none;">
        Color:
        <input type="text" data-wysihtml5-dialog-field="color" value="rgba(0,0,0,1)" />
        <a data-wysihtml5-dialog-action="save">OK</a>&nbsp;<a data-wysihtml5-dialog-action="cancel">Cancel</a>
      </div>
    </li>
    <li>
      <a class="font-button" href="#">Font</a>
      <ul data-wysihtml5-command-group="formatBlock" class="include-user-fonts foreground-dropdown">
        <li><a data-wysihtml5-command="formatBlock" data-wysihtml5-command-value="p">Font 1</li></li>
        <li><a data-wysihtml5-command="formatBlock" data-wysihtml5-command-value="h1">Font 2</a></li>
        <li><a data-wysihtml5-command="formatBlock" data-wysihtml5-command-value="h2">Font 3</a></li>
        <li><a data-wysihtml5-command="formatBlock" data-wysihtml5-command-value="h3">Font 4</a></li>
        <li><a data-wysihtml5-command="formatBlock" data-wysihtml5-command-value="h4">Font 5</a></li>
        <li><a data-wysihtml5-command="formatBlock" data-wysihtml5-command-value="h5">Font 6</a></li>
      </ul>
    </li>
    <a data-wysihtml5-command="formatBlock" data-wysihtml5-command-value="p"></a>
  </ul>
</div>
